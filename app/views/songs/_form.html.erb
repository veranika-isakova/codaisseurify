<%= form_for @song, url: { action: "create" }, html: { multipart: true } do |f| %>

<div class="form-group">
  <label>Name of the song</label>
  <%= f.text_field :song_name, placeholder: "Name", class: "form-control" %>
</div>

<div class="form-group">
  <label>Name of the album</label>
  <%= f.text_area :album_name, rows: 5, placeholder: "Write the name of the album", class: "form-control" %>
</div>

<div class="form-group">
  <label>The year of the release</label>
  <%= f.text_field :release_date, placeholder: "Write the year of the release", class: "form-control" %>
</div>


<div class="actions">
  <%= f.submit "Save", class: "btn btn-primary" %>
</div>

<% end %>
